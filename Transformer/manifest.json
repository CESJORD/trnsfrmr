{
	"name": "__MSG_extname__",
	"version": "1.1",
  "manifest_version": 2,
  "permissions": [ "tabs", "http://*/*", "https://*/*" ],
	"description": "__MSG_extdescription__",
	"default_locale": "en",
	"icons": {
		"48": "icons/icon-48x48.png",
		"128": "icons/icon-128x128.png"
	},
	"options_page": "options.html",
	"page_action": {
	    "default_icon": "icons/icon-16x16.png",
	    "default_title": "__MSG_extname__ - __MSG_options__",
		"popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["scripts/settings.js", "scripts/hashmap.js", "scripts/date.js", "scripts/search.js"],
			"all_frames": true
		}
	],
//	"background_page": "background.html"
	"background": {
		"page": "background.html"
//		"scripts": ["scripts/background.js", "scripts/hashmap.js"]
	}
}